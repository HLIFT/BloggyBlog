{% extends 'admin/base.admin.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des commentaires</h1>
    <br>
    {% for comment in comments %}
        {{ comment.username}}
        <br>
        {{comment.content}}
        <br>
        {% if comment.valid == true %}
            true
        {% else %}
            false
        {% endif %}
        <br>
        <a href="http://symfony.iut/admin/comment/{{comment.id}}/validate">Valider le commentaire</a>
        <a href="http://symfony.iut/admin/comment/{{comment.id}}/remove">Supprimer ce commentaire</a>
        <br>
        <br>
    {% endfor %}
{% endblock %}
