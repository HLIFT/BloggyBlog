{% extends 'admin/base.admin.html.twig' %}

{% block title %}Editer Post{% endblock %}

{% block body %}
    <h3 class="text-center mt-3">Editer un Post</h3>
	<div class="container">
        <form name="post" method="post">
            <div id="post">
                {{ form_row(formView.title) }}
                {{ form_row(formView.content) }}
                {{ form_row(formView.description) }}
                {{ form_row(formView.publishedAt) }}
                {{ form_row(formView.categories) }}
                <div class="form-group">
                    <button type="submit" id="post_Valider" name="post[Valider]" class="btn btn-info btn-block w-50 mx-auto">Valider</button>
                </div>
            </div>
            {{ form_widget(formView._token) }} 
        </form>
	</div>
{% endblock %}