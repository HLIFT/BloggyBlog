{% extends 'admin/base.admin.html.twig' %}

{% block title %}Liste des posts{% endblock %}

{% block body %}
        
    <h1 class="text-center">Liste des posts</h1>
    <br>
    {% for post in posts %}
        Titre :
        {{ post.title}}
        <br>
        Description :
        {{post.description}}
        <br>
        Contenu :
        {{post.content}}
        <br>
        <br>
        Crée le :
        {{post.createdAt|date("d/m/Y")}} à {{post.createdAt|date("H:i")}}
        <br>
        Publié le :
        {{post.publishedAt|date("d/m/Y")}} à {{post.publishedAt|date("H:i")}}
        <br>
        Mis à jour le :
        {{post.updatedAt|date("d/m/Y")}} à {{post.updatedAt|date("H:i")}}
        <br>

        <br>
        <a href="http://symfony.iut/admin/post/{{post.slug}}/edit">Modifier le post</a>
        <a href="http://symfony.iut/admin/post/{{post.id}}/remove">Supprimer le post</a>
        <br>
        <br>
    {% endfor %}
    <br>
    <a href="http://symfony.iut/admin/post/create">Ajouter un nouveau post</a>
{% endblock %}
