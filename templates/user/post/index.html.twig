{% extends 'user/base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<div class="text-center" style="padding-top:2%">
    <h1>Accueil</h1>
</div>

    <h2>Liste des posts</h2>
    <br>
    {% for post in posts %}
        Titre du post :
        {{ post.title}}
        <br>
        Description :
        {{post.description}}
        <br>
        Contenu :
        {{post.content}}
        <br>
        <a href="http://symfony.iut/post/{{post.slug}}">Lire la suite</a>
        <br>
        <br>
    {% endfor %}

{% endblock %}
